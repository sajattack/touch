#include <dt-bindings/gpio/gpio.h>

&i2c_1 {					// indicates parent device : I2C_1 adapter block
	sw49501@28 {				// define new client device(sw49501), slave addr is 0x28
		status = "okay";
		compatible = "siw,sw49501";	// compatible name (see touch_sw49501.c)
		reg = <0x28>;				// slave addr. : 0x28
		interrupt-parent = <&gpx1>;	// interrupt source : GPIO group 'gpx1'
		interrupts = <6 0x02>;		// index 6(0~7) in gpx1 external interrupts
		irqflags = <0x2002>;		// IRQF_ONESHOT(0x2000) | IRQF_TRIGGER_FALLING(0x2)

		chip_flags = <0>;

		reset-gpio = <&gpx1 7 GPIO_ACTIVE_LOW>;	// index 7 in gpx1
		irq-gpio = <&gpx1 6 GPIO_ACTIVE_LOW>;	// index 6 in gpx1

		// Caps
		max_x = <2160>;
		max_y = <3840>;
		max_pressure = <0xff>;
		max_width = <15>;
		max_orientation = <1>;
		max_id = <10>;

		// role
		hw_reset_delay = <210>;
		sw_reset_delay = <90>;
		use_lpwg = <1>;
		use_lpwg_test = <1>;

		// firmware
		use_firmware = <1>;		// enable firmware control
		use_fw_upgrade = <1>;
		fw_image = "siw/sw49501/AURORA58_1_01.img";	// in android -> /lib/firmware/siw/...
	//	panel_spec = "siw/sw49501/ph1_limit.txt";
	//	panel_spec_mfts = "siw/sw49501/ph1_limit_mfts.txt";

		prd_in_file = "/sdcard/siw/sw49501_test_spec_V0.1.txt";
		prd_in_file_m = "/sdcard/siw/sw49501_test_spec_mfts_V0.1.txt";
		prd_out_file = "/sdcard/siw/touch_self_test.txt";
	};
};




